@using BookLibraryStore.Utility
@model List<BookLibraryStore.Models.EntityModel.Announcement>

@{
    ViewData["Title"] = "Manage Announcements";
}

<style>
    :root {
        --primary-color: #3498db;
        --primary-hover: #2980b9;
        --success-color: #2ecc71;
        --danger-color: #e74c3c;
        --warning-color: #f39c12;
        --info-color: #9b59b6;
        --light-gray: #f8f9fa;
        --border-color: #e1e4e8;
        --text-color: #333;
        --text-light: #6c757d;
    }

    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        line-height: 1.6;
        color: var(--text-color);
        background-color: #f5f8fa;
        margin: 0;
        padding: 0;
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 20px;
    }

    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 24px;
        padding-bottom: 16px;
        border-bottom: 1px solid var(--border-color);
    }

    .page-title {
        font-size: 28px;
        font-weight: 600;
        color: #2c3e50;
        margin: 0;
    }

    .btn {
        display: inline-flex;
        align-items: center;
        padding: 10px 18px;
        font-size: 15px;
        font-weight: 500;
        border-radius: 5px;
        cursor: pointer;
        transition: all 0.2s ease;
        text-decoration: none;
        border: none;
    }

    .btn-primary {
        background-color: var(--primary-color);
        color: white;
    }

        .btn-primary:hover {
            background-color: var(--primary-hover);
        }

    .btn-danger {
        background-color: var(--danger-color);
        color: white;
    }

        .btn-danger:hover {
            background-color: #c0392b;
        }

    .btn-sm {
        padding: 6px 12px;
        font-size: 14px;
    }

    .btn i {
        margin-right: 6px;
    }

    .table-container {
        background-color: white;
        border-radius: 8px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
        overflow: hidden;
    }

    table {
        width: 100%;
        border-collapse: collapse;
    }

    thead {
        background-color: #f8f9fa;
    }

    th {
        text-align: left;
        padding: 14px 20px;
        font-weight: 600;
        color: #495057;
        border-bottom: 2px solid var(--border-color);
        font-size: 14px;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    td {
        padding: 16px 20px;
        border-bottom: 1px solid var(--border-color);
        vertical-align: middle;
    }

    tr:last-child td {
        border-bottom: none;
    }

    tr:hover {
        background-color: #f8f9fa;
    }

    .badge {
        display: inline-block;
        padding: 5px 10px;
        border-radius: 50px;
        font-size: 12px;
        font-weight: 500;
        text-align: center;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .badge-active {
        background-color: #e3f9e5;
        color: #27ae60;
    }

    .badge-inactive {
        background-color: #f8f9fa;
        color: #6c757d;
    }

    .badge-scheduled {
        background-color: #e3f0fc;
        color: #3498db;
    }

    .badge-expired {
        background-color: #fcf3e3;
        color: #e67e22;
    }

    .actions {
        display: flex;
        gap: 10px;
    }

    .empty-state {
        text-align: center;
        padding: 40px 20px;
        color: var(--text-light);
    }

    .announcement-type {
        display: inline-block;
        padding: 4px 8px;
        border-radius: 4px;
        font-size: 13px;
        font-weight: 500;
    }

    .type-info {
        background-color: #e3f0fc;
        color: #3498db;
    }

    .type-warning {
        background-color: #fcf3e3;
        color: #e67e22;
    }

    .type-success {
        background-color: #e3f9e5;
        color: #27ae60;
    }

    .type-danger {
        background-color: #fce3e3;
        color: #e74c3c;
    }

    .type-default {
        background-color: #f8f9fa;
        color: #6c757d;
    }
</style>


<div class="container">
    <div class="page-header">
        <h1 class="page-title">Manage Announcements</h1>
        <a asp-action="Create" class="btn btn-primary">
            <i>+</i> Create New Announcement
        </a>
    </div>

    <div class="table-container">
        <table>
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Type</th>
                    <th>Start Date</th>
                    <th>End Date</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>


                @foreach (var item in Model)
                {
                    var now = DateTime.UtcNow;
                    var status = item.IsActive
                    ? (item.StartDate > now ? "Scheduled"
                    : (item.EndDate < now ? "Expired" : "Active"))
                    : "Inactive";

                    <tr>
                        <td>@item.Title</td>
                        <td>
                            @{
                                string type = item.Type;

                                string typeBadgeClass = type switch
                                {
                                    SD.AnnouncementGeneral => "bg-secondary",
                                    SD.AnnouncementSale => "bg-success",
                                    SD.AnnouncementNewArrival => "bg-info text-dark",
                                    SD.AnnouncementEvent => "bg-warning text-dark",
                                    SD.AnnouncementImportantInfo => "bg-danger",
                                    _ => "bg-light text-dark"
                                    };
                            }
                            <span class="badge @typeBadgeClass">@type</span>
                        </td>

                        <td>@item.StartDate.ToShortDateString()</td>
                        <td>@item.EndDate.ToShortDateString()</td>
                        <td>
                            <span class="badge badge-scheduled">@status</span>
                        </td>
                        <td class="actions">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Edit</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger"
                               onclick="return confirm('Are you sure you want to delete this announcement?')">Delete</a>
                        </td>
                    </tr>

                }

            </tbody>
        </table>
    </div>
</div>