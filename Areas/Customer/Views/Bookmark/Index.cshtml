@model IEnumerable<BookLibraryStore.Models.EntityModel.Bookmark>

@{
    ViewData["Title"] = "My Bookmarks";
}

<h2>@ViewData["Title"]</h2>

@if (!Model.Any())
{
    <p>You have no bookmarks yet.</p>
}
else
{
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-3 mb-4">
                <div class="card h-100">
                    <img src="@item.Book.CoverImageUrl" class="card-img-top" alt="@item.Book.Title" />
                    <div class="card-body">
                        <h5 class="card-title">@item.Book.Title</h5>
                        <p class="card-text">@item.Book.Author</p>
                        <a asp-controller="Home" asp-action="Details" asp-route-id="@item.Book.Id" class="btn btn-primary btn-sm">View Details</a>

                        <form asp-controller="Bookmark" asp-action="Remove" asp-route-id="@item.Id" method="post" class="d-inline">
                            <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Remove this bookmark?');">Remove</button>
                        </form>

                    </div>
                </div>
            </div>
        }
    </div>
}