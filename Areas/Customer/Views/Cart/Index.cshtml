@model IEnumerable<BookLibraryStore.Models.EntityModel.CartItem>

@{
    ViewData["Title"] = "My Cart";
}

<h2>My Shopping Cart</h2>

@if (!Model.Any())
{
    <p>Your cart is empty.</p>
}
else
{
    <table class="table table-striped">
        <thead>
        <tr>
            <th>Book</th>
            <th>Cover</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Total</th>
            <th scope="col" colspan="2" class="text-center">Action</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Book.Title</td>
                <td>
                    <img src="@item.Book.CoverImageUrl" width="60" />
                </td>
                <td>Rs.@item.UnitPrice</td>
                <td>@item.Quantity</td>
                <td>Rs.@(item.UnitPrice * item.Quantity)</td>
                <td>
                    <div class="d-flex align-items-center">
                        <a asp-action="Minus" asp-route-cartId="@item.Id" class="btn btn-sm btn-outline-secondary me-1">-</a>
                        <span>@item.Quantity</span>
                        <a asp-action="Plus" asp-route-cartId="@item.Id" class="btn btn-sm btn-outline-secondary ms-1">+</a>
                    </div>
                </td>
                <td>
                    <a asp-action="Remove" asp-route-cartId="@item.Id" class="btn btn-sm btn-danger">Remove</a>
                </td>
            </tr>
        }
        </tbody>
    </table>

    <p class="fw-bold">
        Grand Total: 
        Rs.@Model.Sum(x => x.UnitPrice * x.Quantity)
    </p>

    <a asp-area="Customer" asp-controller="Order" asp-action="PlaceOrder" class="btn btn-success w-25">Place Order</a>
}