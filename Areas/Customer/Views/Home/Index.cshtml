@model List<BookLibraryStore.Models.EntityModel.Book>

@{
    ViewData["Title"] = "Home";
}

<h2>Latest Books</h2>

<div class="row row-cols-1 row-cols-md-4 g-4">

    @foreach (var book in Model)
    {
        <div class="col">
            <div class="card h-100 shadow-sm">
                
                <!-- Cover Image -->
                <a asp-area="Customer" asp-controller="Home" asp-action="Details" asp-route-id="@book.Id">
                    <img src="@book.CoverImageUrl" class="card-img-top" style="height: 250px; object-fit: cover;" />
                </a>

                <div class="card-body">
                    <!-- Title -->
                    <h5 class="card-title">@book.Title</h5>
                    
                    <!-- Author -->
                    <p class="card-text text-muted">by @book.Author</p>

                    <!-- Price -->
                    @if (book.IsOnSale && book.DiscountPercentage > 0)
                    {
                        var discountedPrice = book.Price - (book.Price * book.DiscountPercentage / 100);
                        <p>
                            <span class="text-danger fw-bold">Rs.@discountedPrice</span>
                            <small class="text-muted text-decoration-line-through">Rs.@book.Price:F2</small>
                        </p>
                    }
                    else
                    {
                        <p class="fw-bold">Rs.@book.Price</p>
                    }

                    <!-- Rating -->
                    <p>
                        ⭐ @book.AverageRating.ToString("0.0") / 5
                    </p>

                    <!-- View Details Button -->
                    <a asp-controller="Home" asp-action="Details" asp-route-id="@book.Id" class="btn btn-primary w-100">View Details</a>
                </div>
            </div>
        </div>
    }

</div>