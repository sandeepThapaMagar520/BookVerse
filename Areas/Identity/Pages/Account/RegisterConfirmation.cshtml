@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Email Confirmation";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow">
                <div class="card-body text-center p-4">
                    <h2 class="card-title mb-3 text-primary">Verify Your Email</h2>

                    <p class="lead">A verification email has been sent to <strong>@Model.Email</strong>.</p>
                    <p>Please check your inbox and follow the instructions to confirm your account.</p>
                </div>
            </div>
        </div>
    </div>
</div>


